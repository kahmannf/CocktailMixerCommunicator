<Window x:Class="CocktailMixerWPFMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CocktailMixerWPFMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="700">
    <Grid>
        <TabControl>
            <TabItem Header="Recipes" DataContext="{Binding VMRecipe}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="37" />
                    </Grid.RowDefinitions>
                    <ListBox Grid.RowSpan="2" ItemsSource="{Binding ListRecipes}" DisplayMemberPath="Name" 
                             SelectedItem="{Binding SelectedRecipe}" IsEnabled="{Binding IsSelectionEnabled}">
                        
                    </ListBox>
                    <GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" IsEnabled="{Binding IsEditingEnabled}" Header="Recipe">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <Label Height="27" Margin="5,5,0,0" Content="Name" />
                                <Label Height="27" Margin="5,5,0,0" Content="Ingredients" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox Height="27" Margin="5,5,0,0" Text="{Binding SelectedName, Mode=TwoWay}" 
                                         Width="400" HorizontalAlignment="Left" />
                                <ListView Margin="5,5,0,0" ItemsSource="{Binding SelectedIngredients}" Width="400"
                                          Height="200" HorizontalAlignment="Left" SelectedItem="{Binding SelectedIngredient}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="340" />
                                                    <ColumnDefinition Width="40" />
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{Binding Name}" />
                                                <Label Grid.Column="1" Content="{Binding Amount}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                                    <Button Height="27" Width="150" Content="Add Beverage" Click="ButtonAddBeverage_Click" />
                                    <Button Height="27" Width="150" Margin="5,0,0,0" Content="Remove Beverage" 
                                            IsEnabled="{Binding IsBeverageSelected}" Click="ButtonRemoveBeverage_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5,15,5,0" HorizontalAlignment="Right">
                                    <Button Height="27" Width="150" Content="Cancel" Click="ButtonCancelRecipe_Click" />
                                    <Button Height="27" Width="150" Margin="5,0,0,0" Content="Save" 
                                            IsEnabled="{Binding IsBeverageSelected}" Click="ButtonSaveRecipe_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <Button Grid.Row="1" Margin="5" Content="Edit" Click="ButtonEditRecipe_Click" IsEnabled="{Binding IsSelectionEnabled}"></Button>
                </Grid>
            </TabItem>
            <TabItem Header="Beverages">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
